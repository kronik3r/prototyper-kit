{
    "root": {
        "src": "src",
        "dest": "tmp"
    },

    "tasks": {
        "styles": {
            "src": "assets/sass/*.scss",
            "dest": "assets/css",
            "autoprefixer": {
                "browsers": ["last 2 version"]
            }
        },
        "html": {
            "src": "*.html"
        },
        "scripts": {
            "src": "assets/js/**/*.js"
        },
        "deploy": {
            "remoteUrl": "git@github.com:kronik3r/for-testing-protopyper-kit.git",
            "branch": "master",
            "baseDir": "./dist/**/*"
        }
    }
}
